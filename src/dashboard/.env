# Web server
PORT=3000

# Image source URL (the backend will GET this)
IMAGE_URL=http://0.0.0.0:5000/MD/last_ok

# MQTT broker connection string
# Examples:
# mqtt://localhost:1883
# mqtt://192.168.1.50:1883
MQTT_URL=mqtt://localhost:1883

# MQTT topic where telemetry is published
MQTT_TOPIC=sensors/telemetry

# Optional: credentials
MQTT_USERNAME=
MQTT_PASSWORD=

# Optional: client id (if empty, auto)
MQTT_CLIENT_ID=dashboard-mqtt-client
